" Disable arrow keys
"nnoremap <up> <nop>
"nnoremap <down> <nop>
"nnoremap <left> <nop>
"nnoremap <right> <nop>
" Show ruler
set ruler
" Hybrid line numbers
set relativenumber
set number
" Set tab completion
set wildmode=longest,list,full
set wildmenu
" Set tabwidth
set tabstop=4
set shiftwidth=4
set softtabstop=4
set smarttab
set expandtab
